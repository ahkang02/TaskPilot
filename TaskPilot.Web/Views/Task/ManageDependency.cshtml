@model TaskPilot.Web.ViewModels.ManageTaskDependencyViewModel

@{
    string currTask = string.Empty;
    string action = string.Empty;

    if (Model.CurrentTask == null)
    {
        currTask = "Manage Task Dependency";
        action = "Manage Task Dependency";
        ViewBag.Title = "Manage Task Dependency";
    }
    else
    {
        currTask = Model.CurrentTask;
        action = "Manage Task Dependency";
        ViewBag.Title = "Manage Task Dependency";
    }
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb mb-4">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Task")">Task Management</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@currTask</li>
                    </ol>
                </nav>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title fw-semibold mb-4">@action</h5>
                        <form asp-action="ManageDependency" asp-controller="Task">

                            <div class="card-body px-4 py-3">
                                <div class="row mb-3 ">
                                    <label asp-for="CurrentTask"></label>
                                    <input type="text" asp-for="CurrentTask" readonly class="form-control" />
                                </div>
                                <div class="row mb-3 ">
                                    <label asp-for="DependencyID"></label>
                                    <select class="form-select" asp-for="DependencyID" class="form-control"
                                            asp-items="@(new SelectList(Model.ListOfTasks, "Id", "Name"))">
                                        <option>Select Dependent Task</option>
                                    </select>
                                </div>
                                <input type="hidden" asp-for="DependencyID" />
                                <button type="submit" class="btn btn-primary float-end mb-3">Assign Dependency</button>
                            </div>
                        
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

