@model TaskPilot.Web.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Register";
    Layout = "LoginRegister_Layout";
}

<form asp-action="Register" asp-controller="Account" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="card-body px-4 py-3">
        <div class="row mb-3 text-center">
            <h5>Registration</h5>
        </div>
        <div class="row mb-3">
            <div class="col-md-6 p-1">
                <label asp-for="FirstName"></label>
                <input type="text" asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName"></span>
            </div>
            <div class="col-md-6 p-1">
                <label asp-for="LastName"></label>
                <input type="text" asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName"></span>
            </div>
        </div>
        <div class="row mb-3 ">
            <label asp-for="Username"></label>
            <input type="text" asp-for="Username" class="form-control" />
            <span asp-validation-for="Username"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="Email"></label>
            <input type="email" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="Password"></label>
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="ConfirmPassword"></label>
            <input type="password" asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary mb-3">Create Account</button>
        </div>
        <hr />
        <div class="text-center">
            <p>Already have an account? <a asp-action="Login" asp-controller="Account" class="nav-link fw-semibold d-inline">Login Now</a></p>
        </div>
    </div>
</form>
