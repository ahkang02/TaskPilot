@model TaskPilot.Web.ViewModels.ForgotPasswordViewModel

@{
    ViewBag.Title = "Forgot Password";
    Layout = "LoginRegister_Layout";
}
<p class="text-center text-wrap">Please enter the email address associated with your account</p>
<p class="text-center">We will email you a link to reset your password.</p>
<form asp-action="ForgotPassword" asp-controller="Account" method="post">
    <div class="card-body">
        <div class="row mb-3">
            <label asp-for="Email"></label>
            <input type="email" class="form-control" asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary mb-3 form-control">Forgot Password</button>
        </div>
        <div class="text-center">
            <a asp-action="Login" asp-controller="Account" class="btn btn-light mb-3 form-control">Back To Login</a>
        </div>
        <hr />
    </div>
</form>
