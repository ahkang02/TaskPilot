@model TaskPilot.Web.ViewModels.ResetPasswordViewModel

@{
    ViewBag.Title = "Reset Password";
    Layout = "LoginRegister_Layout";
}

<form asp-action="ResetPassword" asp-controller="Account" method="post">
    <div class="card-body">
        <div class="row mb-3 text-center">
            <h5>Reset Password</h5>
        </div>
        <input type="hidden" asp-for="Code" />
        <div class="row mb-3">
            <label asp-for="Email"></label>
            <input type="email" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="Password"></label>
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="ConfirmPassword"></label>
            <input type="password" asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary mb-3">Reset Passowrd</button>
        </div>
    </div>
</form>