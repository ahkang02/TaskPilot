@model TaskPilot.Web.ViewModels.AssignRoleViewModel

@{
    string currTask = string.Empty;
    string action = string.Empty;

    if (Model.RoleId == null)
    {
        currTask = Model.Username!;
        action = "Assign Role";
        ViewBag.Title = "New Role";
    }
    else
    {
        currTask = Model.Username!;
        action = "Assign Role";
        ViewBag.Title = "Assign Role";
    }
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb mb-4">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="User">User Management</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@currTask</li>
                    </ol>
                </nav>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title fw-semibold mb-4">@action</h5>
                        <form asp-action="AssignRole" asp-controller="User">
                            <div class="card-body px-4 py-3">
                                <div class="row mb-3 ">
                                    <label asp-for="Username"></label>
                                    <input type="text" asp-for="Username" class="form-control" readonly />
                                </div>
                                <div class="row mb-3 ">
                                    <label asp-for="CurrentUserRole"></label>
                                    <input type="text" asp-for="CurrentUserRole" class="form-control" readonly />
                                </div>
                                <div class="row mb-3">
                                    <label asp-for="RoleId"></label>
                                    <select asp-for="RoleId" class="form-select"
                                            asp-items="@(new SelectList(Model.RoleToSelect, "Id", "Name"))">
                                            <option>Select </option>
                                    </select>
                                    <span asp-validation-for="RoleId"></span>
                                </div>
                                <input type="hidden" asp-for="RoleId" />
                                <button type="submit" class="btn btn-primary float-end mb-3">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

