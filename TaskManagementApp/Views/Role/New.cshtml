@model TaskManagementApp.ViewModels.EditRoleViewModel

@{
    string currTask = string.Empty;
    string action = string.Empty;

    if (Model.RoleId == null)
    {
        currTask = "New Role";
        action = "New Role";
        ViewBag.Title = "New Role";
    }
    else
    {
        currTask = Model.RoleName;
        action = "Edit Role";
        ViewBag.Title = "Edit Role";
    }
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb mb-4">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Role")">System Management</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@currTask</li>
                    </ol>
                </nav>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title fw-semibold mb-4">@action</h5>
                        @using (Html.BeginForm("New", "Role", FormMethod.Post))
                        {
                            <div class="card-body px-4 py-3">
                                <div class="row mb-3 ">
                                    @Html.LabelFor(m => m.RoleName)
                                    @Html.TextBoxFor(m => m.RoleName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.RoleName)
                                </div>
                                <div class="row mb-3">
                                    <div class="table-wrapper">
                                        <table class="table table-responsive">
                                            <thead>
                                                <tr>
                                                    <th>Permission</th>
                                                    <th>Read</th>
                                                    <th>Create</th>
                                                    <th>Update</th>
                                                    <th>Delete</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @for (int i = 0; i < Model.FeaturePermissions.Count; i++)
                                                {
                                                    <tr>
                                                        <th>@Model.FeaturePermissions[i].FeatureName</th>
                                                        @for (int j = 0; j < Model.FeaturePermissions[i].Permissions.Count; j++)
                                                        {
                                                            if (Model.FeaturePermissions[i].Permissions[j].Name.Contains("Index"))
                                                            {
                                                                <td>
                                                                    @Html.CheckBoxFor(m => Model.FeaturePermissions[i].Permissions[j].IsSelected, new { @css = "form-check-input" })
                                                                    @Html.HiddenFor(m => Model.FeaturePermissions[i].Permissions[j].PermissionId)
                                                                </td>
                                                            }
                                                            if (Model.FeaturePermissions[i].Permissions[j].Name.Contains("New"))
                                                            {
                                                                <td>
                                                                    @Html.CheckBoxFor(m => Model.FeaturePermissions[i].Permissions[j].IsSelected, new { @css = "form-check-input" })
                                                                    @Html.HiddenFor(m => Model.FeaturePermissions[i].Permissions[j].PermissionId)
                                                                </td>
                                                            }
                                                            if (Model.FeaturePermissions[i].Permissions[j].Name.Contains("Update"))
                                                            {
                                                                <td>
                                                                    @Html.CheckBoxFor(m => Model.FeaturePermissions[i].Permissions[j].IsSelected, new { @css = "form-check-input" })
                                                                    @Html.HiddenFor(m => Model.FeaturePermissions[i].Permissions[j].PermissionId)
                                                                </td>
                                                            }
                                                            if (Model.FeaturePermissions[i].Permissions[j].Name.Contains("Delete"))
                                                            {
                                                                <td>
                                                                    @Html.CheckBoxFor(m => Model.FeaturePermissions[i].Permissions[j].IsSelected, new { @css = "form-check-input" })
                                                                    @Html.HiddenFor(m => Model.FeaturePermissions[i].Permissions[j].PermissionId)
                                                                </td>
                                                            }
                                                        }
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                @Html.HiddenFor(m => m.RoleId)
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-primary float-end mb-3">@action</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

