@model TaskManagementApp.ViewModels.ManageTaskDependencyViewModel

@{
    string currTask = string.Empty;
    string action = string.Empty;

    if (Model.CurrentTask == null)
    {
        currTask = "Manage Task Dependency";
        action = "Manage Task Dependency";
        ViewBag.Title = "Manage Task Dependency";
    }
    else
    {
        currTask = Model.CurrentTask;
        action = "Manage Task Dependency";
        ViewBag.Title = "Manage Task Dependency";
    }
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb mb-4">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Task")">Task Management</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@currTask</li>
                    </ol>
                </nav>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title fw-semibold mb-4">@action</h5>
                        @using (Html.BeginForm("ManageDependency", "Task", FormMethod.Post))
                        {
                            <div class="card-body px-4 py-3">
                                <div class="row mb-3 ">
                                    @Html.LabelFor(m => m.CurrentTask)
                                    @Html.TextBoxFor(m => m.CurrentTask, new { @class = "form-control" , @readonly = "true"})
                                </div>
                                <div class="row mb-3 ">
                                    @Html.LabelFor(m => m.DependencyID)
                                    @Html.DropDownListFor(m => m.DependencyID, new SelectList(Model.ListOfTasks, "Id", "Name"), "Assign Dependency To Task", new { @class = "form-control" })
                                </div>
                                @Html.HiddenFor(m => m.DependencyID)
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-primary float-end mb-3">Assign Dependency</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

