@model TaskManagementApp.ViewModels.ForgotPasswordViewModel

@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/LoginRegister_Layout.cshtml";
}
<div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed">
    <div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
        <div class="d-flex align-items-center justify-content-center w-100">
            <div class="row justify-content-center w-100">
                <div class="col-md-8 col-lg-6 col-xxl-3">
                    <div class="card mb-0">
                        <div class="card-body">
                            <a href="#" class="text-nowrap logo-img text-center d-block py-3 w-100">
                                <img src="@Url.Content("~/Content/Images/Logo.png")" width="180" alt="">
                            </a>
                            <p class="text-center">Your All-In-One Task Management App</p>
                            <p class="text-center text-wrap">Please enter the email address associated with your account</p> 
                            <p class="text-center">We will email you a link to reset your password.</p>
                            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
                            {
                                <div class="card-body">
                                    <div class="row mb-3">
                                        @Html.LabelFor(m => m.Email)
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Email)
                                    </div>
                                    @Html.AntiForgeryToken()
                                    <div class="text-center">
                                        <button type="submit" class="btn btn-primary mb-3 form-control">Forgot Password</button>
                                    </div>
                                    <div class="text-center">
                                        <a href="@Url.Action("Login", "Account")" class="btn btn-light mb-3 form-control">Back To Login</a>
                                    </div>
                                    <hr />
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
